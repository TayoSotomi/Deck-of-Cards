<h1>Your Hand</h1>

<form asp-action="DeckOfCards" asp-method="post">
    @{
        int i = 0;
        foreach (Card c in Model.cards)
        {
            string name = $"card{i}";
            i++;
            <img src="@c.image"  />
            <input type="checkbox" value="@c.image" name="@name"/>

        }


    }
    <br />
    <input type ="submit" />

</form>

<br />
<a asp-action="Shuffle" class="btn" btn-primary>Draw 5 more </a>
<a asp-action="Shuffle" class="btn" btn-primary>Reshuffle Early> </a>